<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".DetailActivity"
        android:background="@drawable/main2" >

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:text="업체명"
            android:fontFamily="@font/dxbirdbold"
            android:textColor="#000"
            android:textSize="50sp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp"
            android:stretchColumns="1"
            android:background="#ffffff">

            <TableRow>
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="  예약자   "
                    android:textSize="14sp"
                    android:textColor="#969696"
                    android:fontFamily="@font/main_font" />

                <TextView
                    android:id="@+id/name"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_span="3"
                    android:textSize="16sp"
                    android:textColor="#404040"
                    android:fontFamily="@font/main_font"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="  예약날짜   "
                    android:textSize="14sp"
                    android:textColor="#969696"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/main_font" />

                <TextView
                    android:id="@+id/date"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#404040"
                    android:textSize="16sp"
                    android:layout_span="3"
                    android:fontFamily="@font/main_font"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="  출발장소   "
                    android:textSize="14sp"
                    android:textColor="#969696"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/main_font" />

                <TextView
                    android:id="@+id/startLocation"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#404040"
                    android:textSize="15sp"
                    android:fontFamily="@font/main_font"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="  도착장소   "
                    android:textSize="14sp"
                    android:textColor="#969696"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/main_font" />

                <TextView
                    android:id="@+id/endLocation"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#404040"
                    android:textSize="15sp"
                    android:fontFamily="@font/main_font"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="  짐 종류   "
                    android:textSize="14sp"
                    android:textColor="#969696"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/main_font"
                    />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="기내용"
                    android:textSize="15sp"
                    android:fontFamily="@font/main_font"/>
                <TextView
                    android:id="@+id/fight_num"
                    android:paddingRight="20dp"
                    android:layout_marginTop="25dp"
                    android:textColor="#404040"
                    android:textSize="16sp"
                    android:fontFamily="@font/main_font"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text=" "
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/main_font"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:paddingLeft="10dp"
                    android:text="화물용"
                    android:textSize="15sp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/main_font"/>

                <TextView
                    android:id="@+id/freight_num"
                    android:paddingRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#404040"
                    android:textSize="16sp"
                    android:fontFamily="@font/main_font"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text=" "
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/main_font"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="특대용"
                    android:textSize="15sp"
                    android:fontFamily="@font/main_font"/>
                <TextView
                    android:id="@+id/special_num"
                    android:paddingRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#404040"
                    android:textSize="16sp"
                    android:fontFamily="@font/main_font"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="  결제금액   "
                    android:textSize="17sp"
                    android:textColor="#2086B5"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/main_font"/>

                <TextView
                    android:id="@+id/totalCost"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#2086B5"
                    android:textSize="18sp"
                    android:fontFamily="@font/main_font"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_gravity="center_horizontal"
            android:text="돌아가기"
            android:textSize="20sp"
            android:textColor="#fff"
            android:padding="15dp"
            android:background="@drawable/join_item_button"/>

    </LinearLayout>
</ScrollView>